{% schema %}
{
  "name": "Mental Health Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Mental Health"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Confidential, clinically guided options for mood and focus"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn more"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Mental Health Banner"
    }
  ]
}
{% endschema %}

<section class="mh-banner">
  <div class="mh-content">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.subheading }}</p>
    <a class="mh-btn" href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>

    <div class="mh-grid">
      <div>Ketamine Therapy</div>
      <div>SSRIs</div>
      <div>ADHD Care</div>
      <div>Acute Anxiety</div>
      <div>Wellbutrin</div>
      <div>Low-Dose Naltrexone</div>
    </div>
  </div>

  <div class="mh-image">
    {% if section.settings.background_image %}
      <img src="{{ section.settings.background_image | img_url: '800x' }}" alt="">
    {% endif %}
  </div>
</section>

<style>
.mh-banner {
  display: flex;
  padding: 40px;
  border-radius: 20px;
  background: linear-gradient(90deg, #002a5c, #0fa36b);
  color: white;
  align-items: center;
  justify-content: space-between;
}

.mh-content {
  max-width: 50%;
}

.mh-btn {
  display: inline-block;
  margin: 15px 0;
  padding: 10px 20px;
  background: #00c060;
  color: #fff;
  border-radius: 25px;
  text-decoration: none;
  font-weight: bold;
}

.mh-grid {
  margin-top: 20px;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 10px;
}

.mh-grid div {
  background: rgba(255, 255, 255, 0.1);
  padding: 12px;
  border-radius: 8px;
}

.mh-image img {
  width: 350px;
  border-radius: 15px;
  object-fit: cover;
}
</style>
