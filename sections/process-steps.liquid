<section class="process-section">
  <h2 class="process-heading">{{ section.settings.heading }}</h2>

  <div class="process-grid">

    {% for block in section.blocks %}
      <div class="process-card">
        
        {% if block.settings.icon_image %}
          <img class="process-icon" 
               src="{{ block.settings.icon_image | img_url: '200x' }}" 
               alt="">
        {% endif %}

        <p class="process-step">STEP {{ forloop.index }}</p>
        <h3 class="process-title">{{ block.settings.title }}</h3>
        <p class="process-text">{{ block.settings.text }}</p>

      </div>
    {% endfor %}

  </div>
</section>


<style>
.process-section {
    max-width: 84%;
    margin: 0 auto;
  padding: 0px 20px;
  background: #012050;
  color: white;
  text-align: center;
}

.process-heading {
  font-size: 32px;
  font-weight: 600;
  margin-bottom: 40px;
}

.process-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 25px;
  max-width: 1100px;
  margin: auto;
}

.process-card {
  background: linear-gradient(145deg, #0a2d64, #0e375f);
  padding: 35px;
  border-radius: 22px;
  text-align: left;
  position: relative;
  overflow: hidden;
}

.process-card:nth-child(3) {
  grid-column: span 2;
}

.process-icon {
  width: 65px;
  margin-bottom: 15px;
}

.process-step {
  font-size: 12px;
  opacity: 0.6;
  margin-bottom: 5px;
}

.process-title {
  font-size: 22px;
  font-weight: 600;
  margin: 0 0 10px 0;
}

.process-text {
  opacity: 0.85;
  line-height: 1.5;
}

/* Responsive */
@media(max-width: 750px) {
  .process-grid {
    grid-template-columns: 1fr;
  }
  .process-card:nth-child(3) {
    grid-column: span 1;
  }
}
</style>


{% schema %}
{
  "name": "Process Steps Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Our Process"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Step Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Step Title",
          "default": "Step Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Describe the step here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Process Steps"
    }
  ]
}
{% endschema %}
